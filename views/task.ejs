<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Details</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
            background: #fafafa;
            padding: 60px 20px;
            color: #333;
            line-height: 1.6;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        h2 {
            font-size: 1.8em;
            font-weight: 600;
            margin-bottom: 30px;
            color: #000;
        }

        .field {
            margin-bottom: 25px;
        }

        .field-label {
            font-size: 0.85em;
            color: #666;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .field-content {
            font-size: 1em;
            color: #333;
        }

        .status {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 4px;
            font-size: 0.9em;
            background: #f0f0f0;
            color: #333;
        }

        .actions {
            margin-top: 40px;
            display: flex;
            gap: 10px;
            align-items: center;
            justify-content: center;
        }

        button {
            padding: 10px 20px;
            background: #000;
            color: #fff;
            border: 1px solid #000;
            border-radius: 4px;
            font-size: 0.95em;
            cursor: pointer;
        }

        button:hover {
            background: #333;
        }

        .back-link {
            padding: 10px 20px;
            background: transparent;
            color: #000;
            text-decoration: none;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 0.95em;
            transition: all 0.2s;
            display: inline-block;
        }

        .back-link:hover {
            border-color: #000;
        }

        @media (max-width: 600px) {
            body {
                padding: 40px 20px;
            }

            .actions {
                flex-direction: column;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 id="task-title">
            <%= task.title %>
        </h2>

        <div class="field">
            <div class="field-label">Description</div>
            <div class="field-content" id="task-description">
                <p class="task-description">
                    <%= task.description %>
                </p>
            </div>
        </div>

        <div class="field">
            <div class="field-label">Status</div>
            <div>
                <span class="status" id="task-status">
                    <%= task.completed ? 'Completed ✅' : 'Pending ❌' %>
                </span>
            </div>
        </div>

        <div class="actions">
            <form action="/task/<%= task.id %>/toggle" method="POST">
                <button type="submit">Toggle Status</button>
            </form>
        </div>
    </div>

    <script>
        document.querySelector('button').addEventListener('click', function (e) {
            e.preventDefault();
            const statusEl = document.getElementById('task-status');
            const currentText = statusEl.textContent;
            if (currentText.includes('Completed')) {
                statusEl.textContent = 'Pending ❌';
            } else {
                statusEl.textContent = 'Completed ✅';
            }
        });
    </script>
</body>

</html>