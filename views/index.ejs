<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #fafafa;
            color: #333;
            line-height: 1.6;
            padding: 40px 20px;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
        }

        .task-list {
            list-style: none;
        }

        .no-tasks {
            text-align: center;
            color: #999;
            padding: 60px 20px;
            font-size: 16px;
        }

        .task-item {
            background: white;
            border: 1px solid #e5e5e5;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 16px;
            transition: border-color 0.2s;
        }

        .task-item:hover {
            border-color: #ccc;
        }

        .task-item.completed {
            background: #f8f9fa;
            opacity: 0.7;
        }

        .task-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .task-title {
            font-size: 18px;
            font-weight: 500;
            color: #333;
        }

        .task-item.completed .task-title {
            text-decoration: line-through;
            color: #666;
        }

        .task-status {
            font-size: 14px;
            color: #666;
        }

        .task-description {
            color: #666;
            font-size: 15px;
            margin-bottom: 16px;
        }

        .task-actions {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .task-actions form {
            margin: 0;
        }

        .btn {
            padding: 8px 16px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background: white;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            color: #333;
            display: inline-block;
            font-family: inherit;
            line-height: 1.5;
        }

        .btn:hover {
            background: #f5f5f5;
            border-color: #999;
        }

        .btn-delete {
            color: #dc3545;
            border-color: #dc3545;
        }

        .btn-delete:hover {
            background: #dc3545;
            color: white;
        }

        @media (max-width: 768px) {
            body {
                padding: 20px 16px;
            }

            .task-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 4px;
            }

            .task-actions {
                flex-wrap: wrap;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <ul class="task-list">
            <% if (tasks.length===0) { %>
                <li class="no-tasks">
                    No tasks to display
                </li>
                <% } else { %>
                    <% tasks.forEach(task=> { %>
                        <li class="task-item <%= task.completed ? 'completed' : '' %>">
                            <div class="task-header">
                                <div class="task-title">
                                    <%= task.title %>
                                </div>
                                <div class="task-status">
                                    <%= task.completed ? 'Completed' : 'Active' %>
                                </div>
                            </div>

                            <div class="task-actions">
                                <a href="/task/<%= task.id %>" class="btn">
                                    View Task
                                </a>

                                <form action="/task/<%= task.id %>/toggle" method="POST" style="display:inline;">
                                    <button type="submit" class="btn">
                                        <%= task.completed ? 'Mark Active' : 'Mark Complete' %>
                                    </button>
                                </form>

                                <form action="/task/<%= task.id %>/delete" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-delete">
                                        Delete
                                    </button>
                                </form>
                            </div>

                        </li>
                        <% }) %>
                            <% } %>
        </ul>
    </div>
</body>

</html>